<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.enterprise.UserBehaviorRecordMapper">
    
    <resultMap type="com.xiliulou.electricity.entity.enterprise.UserBehaviorRecord" id="UserBehaviorRecordMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="orderId" column="order_id" jdbcType="VARCHAR"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
    </resultMap>
    
    <!--查询单个-->
    <select id="queryById" resultMap="UserBehaviorRecordMap">
        select
          id, order_id, uid, type, create_time, update_time, tenant_id
        from t_user_behavior_record
        where id = #{id}
    </select>
    
    <!--通过主键修改数据-->
    <update id="update">
        update t_user_behavior_record
        <set>
            <if test="orderId != null and orderId != ''">
                order_id = #{orderId},
            </if>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
        </set>
        where id = #{id}
    </update>
    
    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_user_behavior_record where id = #{id}
    </delete>
    
    <delete id="deleteByUid">
        delete from t_user_behavior_record where uid = #{uid}
    </delete>

</mapper>
