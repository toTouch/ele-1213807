<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.BatteryTrackRecordMapper">
    
    <resultMap type="com.xiliulou.electricity.entity.BatteryTrackRecord" id="BatteryTrackRecordMap">
        <result property="sn" column="sn" jdbcType="VARCHAR"/>
        <result property="orderId" column="order_id" jdbcType="VARCHAR"/>
        <result property="eId" column="e_id" jdbcType="INTEGER"/>
        <result property="eName" column="e_name" jdbcType="VARCHAR"/>
        <result property="eNo" column="e_no" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>

    </resultMap>

    <select id="queryTrackRecordByCondition" resultMap="BatteryTrackRecordMap">
        select
         sn, order_id, e_id, e_name, e_no, type, create_time, uid, phone, name
        from t_battery_track_record
        <where>
            sn = #{sn}
            <if test="startTime != null">
                and create_time &gt;= #{startTime}
            </if>
            <if test="endTime != null">
                and create_time &lt;= #{endTime}
            </if>
        </where>
        order by create_time desc
        limit #{offset}, #{size}
    </select>
    <insert id="insertBatch" >
        insert into t_battery_track_record(sn, order_id , e_id , e_name , e_no , name ,  phone ,
        uid , type , create_time ) values
        <foreach collection="list" index="index" separator="," item="c">
            (#{c.sn}, #{c.orderId}, #{c.eId}, #{c.eName}, #{c.eNo}, #{c.name},#{c.phone},
            #{c.uid}, #{c.type}, #{c.createTime})
        </foreach>
    </insert>
</mapper>
