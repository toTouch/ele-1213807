<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.asset.AssetInventoryMapper">
    
    <resultMap type="com.xiliulou.electricity.entity.asset.AssetInventory" id="assetInventoryMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="orderNo" column="order_no " jdbcType="VARCHAR"/>
        <result property="franchiseeId" column="franchisee_id" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="inventoriedTotal" column="inventoried_total" jdbcType="INTEGER"/>
        <result property="pendingTotal" column="pending_total" jdbcType="INTEGER"/>
        <result property="finishTime" column="finish_time" jdbcType="INTEGER"/>
        <result property="operator" column="operator" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
        <result property="delFlag" column="del_flag" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="INTEGER"/>
        <result property="remark" column="remark" jdbcType="INTEGER"/>
    </resultMap>
    
    <!-- 基础字段 -->
    <sql id="basic_field">
        id,
        order_no,
        franchisee_id,
        type,
        status,
        inventoried_total,
        pending_total,
        finish_time,
        operator,
        tenant_id,
        del_flag,
        create_time,
        update_time,
        remark
    </sql>
    
    <!--新增所有列-->
    <insert id="insertOne" keyProperty="id" useGeneratedKeys="true">
        insert into t_asset_inventory
        <trim prefix="(" suffix=")" suffixOverrides=",">
            order_no,
            franchisee_id,
            type,
            status,
            inventoried_total,
            pending_total,
            finish_time,
            operator,
            tenant_id,
            del_flag,
            create_time,
            update_time,
            remark
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{orderNo},
            #{franchiseeId},
            #{type},
            #{status},
            #{inventoriedTotal},
            #{pendingTotal},
            #{finishTime},
            #{operator},
            #{tenantId},
            #{delFlag},
            #{createTime},
            #{updateTime}
        </trim>
    </insert>
    
    <update id="updateById">
        update t_asset_inventory
        <set>
            <if test="franchiseeId != null">
                franchisee_id = #{franchiseeId},
            </if>
            <if test="finishTime != null">
                finish_time = #{finishTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id} and tenant_id = #{tenantId}
    </update>
    
    <select id="selectListByFranchiseeId" resultType="com.xiliulou.electricity.vo.asset.AssetInventoryVO">
        select
        <include refid="basic_field"/>
        from t_asset_inventory
        <where>
            <if test="orderNo != null and orderNo != ''">
                and order_no={orderNo}
            </if>
            <if test="franchiseeId != null ">
                and franchisee_id={franchiseeId}
            </if>
            <if test="status != null ">
                and status={status}
            </if>
            and tenant_id = #{tenantId} and del_flag = 0
        </where>
        order by id desc
        <if test="offset != null and size != null">
            limit #{offset}, #{size}
        </if>
    </select>
    
    <select id="queryCount" resultType="java.lang.Integer">
        select count(1)
        from t_asset_inventory
        <where>
            <if test="orderNo != null and orderNo != ''">
                and order_no={orderNo}
            </if>
            <if test="franchiseeId != null ">
                and franchisee_id={franchiseeId}
            </if>
            <if test="status != null ">
                and status={status}
            </if>
            and tenant_id = #{tenantId} and del_flag = 0
        </where>
    </select>
    
    <select id="selectById" resultType="com.xiliulou.electricity.vo.asset.AssetInventoryVO">
        select
        <include refid="basic_field"/>
        from t_asset_inventory where del_flag = 0 and id = #{id}
    </select>

</mapper>




