<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.installment.InstallmentDeductionRecordMapper">
    
    <sql id="columnsWithoutId">
        uid, external_agreement_no, pay_no, repayment_plan_no, user_name, mobile, amount, `status`, issue, plan_id, `subject`,
        tenant_id, franchisee_id, create_time, update_time
    </sql>
    
    <sql id="fieldsWithoutId">
        #{uid}, #{externalAgreementNo}, #{payNo}, #{repaymentPlanNo}, #{userName}, #{mobile}, #{amount}, #{status}, #{issue}, #{planId}, #{subject},
        #{tenantId}, #{franchiseeId}, #{createTime}, #{updateTime}
    </sql>
    
    <sql id="ifLabelsForWhere">
        <if test="uid != null">
            and uid = #{uid}
        </if>
        <if test="externalAgreementNo != null and externalAgreementNo != ''">
            and external_agreement_no = #{externalAgreementNo}
        </if>
        <if test="payNo != null and payNo != ''">
            and pay_no = #{payNo}
        </if>
        <if test="repaymentPlanNo != null and repaymentPlanNo != ''">
            and repayment_plan_no = #{repaymentPlanNo}
        </if>
        <if test="userName != null and userName != ''">
            and user_name = #{userName}
        </if>
        <if test="mobile != null and mobile != ''">
            and mobile = #{mobile}
        </if>
        <if test="amount != null">
            and amount = #{amount}
        </if>
        <if test="status != null">
            and `status` = #{status}
        </if>
        <if test="issue != null">
            and issue = #{issue}
        </if>
        <if test="planId != null">
            and plan_id = #{planId}
        </if>
        <if test="franchiseeId != null">
            and franchisee_id = #{franchiseeId}
        </if>
        <if test="franchiseeIds != null">
            and franchisee_id in
            <foreach collection="franchiseeIds" open="(" separator="," close=")" item="franchiseeId">
                #{franchiseeId}
            </foreach>
        </if>
        <if test="createTime != null">
            and create_time = #{createTime}
        </if>
        <if test="updateTime != null">
            and update_time = #{updateTime}
        </if>
    </sql>
    
    <resultMap id="installmentDeductionRecordMap" type="com.xiliulou.electricity.entity.installment.InstallmentDeductionRecord">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="uid" column="uid" jdbcType="BIGINT"/>
        <result property="externalAgreementNo" column="external_agreement_no" jdbcType="VARCHAR"/>
        <result property="payNo" column="pay_no" jdbcType="VARCHAR"/>
        <result property="repaymentPlanNo" column="repayment_plan_no" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="mobile" column="mobile" jdbcType="VARCHAR"/>
        <result property="amount" column="amount" jdbcType="DECIMAL"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <result property="issue" column="issue" jdbcType="TINYINT"/>
        <result property="planId" column="plan_id" jdbcType="BIGINT"/>
        <result property="subject" column="subject" jdbcType="VARCHAR"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
        <result property="franchiseeId" column="franchisee_id" jdbcType="BIGINT"/>
        <result property="createTime" column="create_time" jdbcType="BIGINT"/>
        <result property="updateTime" column="update_time" jdbcType="BIGINT"/>
    </resultMap>
    
    <select id="selectPage" resultMap="installmentDeductionRecordMap">
        select id, <include refid="columnsWithoutId"/>
        from t_installment_deduction_record
        where tenant_id = #{tenantId}
            <include refid="ifLabelsForWhere"/>
        order by id desc
        limit #{offset}, #{size}
    </select>
    
    <select id="count" resultType="java.lang.Integer">
        select count(1)
        from t_installment_deduction_record
        where tenant_id = #{tenantId}
            <include refid="ifLabelsForWhere"/>
    </select>
    
    <select id="selectRecordByPayNo" resultMap="installmentDeductionRecordMap">
        select id, <include refid="columnsWithoutId"/>
        from t_installment_deduction_record
        where pay_no = #{payNo}
    </select>
    
    <select id="selectListDeductionRecord"
            resultType="com.xiliulou.electricity.entity.installment.InstallmentDeductionRecord">
        select id, <include refid="columnsWithoutId"/>
        from t_installment_deduction_record
        where uid = #{uid}
            <if test="externalAgreementNo != null and externalAgreementNo != ''">
                and external_agreement_no = #{externalAgreementNo}
            </if>
            <if test="issue != null">
                and issue = #{issue}
            </if>
            <if test="status != null">
                and `status` = #{status}
            </if>
    </select>
    
    <select id="queryById" resultMap="installmentDeductionRecordMap">
        select id, <include refid="columnsWithoutId"/>
        from t_installment_deduction_record
        where id = #{id}
    </select>
    
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into t_installment_deduction_record(<include refid="columnsWithoutId"/>) values (<include refid="fieldsWithoutId"/>)
    </insert>
    
    <update id="update">
        update t_installment_deduction_record
        <set>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="externalAgreementNo != null and externalAgreementNo != ''">
                external_agreement_no = #{externalAgreementNo},
            </if>
            <if test="payNo != null and payNo != ''">
                pay_no = #{payNo},
            </if>
            <if test="repaymentPlanNo != null and repaymentPlanNo != ''">
                repayment_plan_no = #{repaymentPlanNo},
            </if>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="mobile != null and mobile != ''">
                mobile = #{mobile},
            </if>
            <if test="amount != null">
                amount = #{amount},
            </if>
            <if test="status != null">
                `status` = #{status},
            </if>
            <if test="issue != null">
                issue = #{issue},
            </if>
            <if test="planId != null">
                plan_id = #{planId},
            </if>
            <if test="subject != null and subject != ''">
                `subject` = #{subject},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
            <if test="franchiseeId != null">
                franchisee_id = #{franchiseeId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>