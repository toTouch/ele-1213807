<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.UserBatteryServiceFeeMapper">
    
    <resultMap type="com.xiliulou.electricity.entity.UserBatteryServiceFee" id="UserBatteryServiceFeeMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="batteryServiceFeeOrderId" column="battery_service_fee_order_id" jdbcType="VARCHAR"/>
        <result property="serviceFeeStatus" column="service_fee_status" jdbcType="INTEGER"/>
        <result property="serviceFeeGenerateTime" column="service_fee_generate_time" jdbcType="INTEGER"/>
        <result property="delFlag" column="del_flag" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="INTEGER"/>
    </resultMap>
    
    <!-- 基础字段 -->
    <sql id="selectUserBatteryServiceFee">
       	select   id, uid, battery_service_fee_order_id, service_fee_status, service_fee_generate_time, del_flag, create_time, update_time        from t_user_battery_service_fee
    </sql>
    
    <!--查询单个-->
    <select id="selectByUid" resultMap="UserBatteryServiceFeeMap">
        <include refid="selectUserBatteryServiceFee"/>
        where uid = #{uid}
    </select>
    
    <!--通过实体作为筛选条件查询-->
    <select id="selectByQuery" resultMap="UserBatteryServiceFeeMap">
        <include refid="selectUserBatteryServiceFee"/>
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="batteryServiceFeeOrderId != null and batteryServiceFeeOrderId != ''">
                and battery_service_fee_order_id = #{batteryServiceFeeOrderId}
            </if>
            <if test="serviceFeeStatus != null">
                and service_fee_status = #{serviceFeeStatus}
            </if>
            <if test="serviceFeeGenerateTime != null">
                and service_fee_generate_time = #{serviceFeeGenerateTime}
            </if>
            <if test="delFlag != null">
                and del_flag = #{delFlag}
            </if>
            <if test="tenantId != null">
                and tenant_id = #{tenantId}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
    </select>
    
    <!--新增所有列-->
    <insert id="insertOne" keyProperty="id" useGeneratedKeys="true">
        insert into t_user_battery_service_fee(uid, battery_service_fee_order_id, service_fee_status, service_fee_generate_time, del_flag, create_time, update_time)
        values (#{uid}, #{batteryServiceFeeOrderId}, #{serviceFeeStatus}, #{serviceFeeGenerateTime}, #{delFlag}, #{createTime}, #{updateTime})
    </insert>

    <insert id="insertOrUpdate" keyProperty="id" useGeneratedKeys="true">
        insert into t_user_battery_service_fee(uid, battery_service_fee_order_id, service_fee_status, service_fee_generate_time, del_flag, create_time, update_time)
        values (#{uid}, #{batteryServiceFeeOrderId}, #{serviceFeeStatus}, #{serviceFeeGenerateTime}, #{delFlag}, #{createTime}, #{updateTime})
        on duplicate key
        update battery_service_fee_order_id=#{batteryServiceFeeOrderId}, service_fee_status=#{serviceFeeStatus}, service_fee_generate_time=#{serviceFeeGenerateTime}, del_flag=#{delFlag}, update_time=#{updateTime}
    </insert>
    
    <!--通过主键修改数据-->
    <update id="updateByUid">
        update t_user_battery_service_fee
        <set>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="batteryServiceFeeOrderId != null and batteryServiceFeeOrderId != ''">
                battery_service_fee_order_id = #{batteryServiceFeeOrderId},
            </if>
            <if test="serviceFeeStatus != null">
                service_fee_status = #{serviceFeeStatus},
            </if>
            <if test="serviceFeeGenerateTime != null">
                service_fee_generate_time = #{serviceFeeGenerateTime},
            </if>
            <if test="delFlag != null">
                del_flag = #{delFlag},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where uid = #{uid}
    </update>
    
    <!--通过主键删除-->
    <delete id="deleteByUid">
        delete from t_user_battery_service_fee where uid = #{uid}
    </delete>

</mapper>
