<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.RolePermissionMapper">

    <resultMap type="com.xiliulou.electricity.entity.RolePermission" id="RolePermissionMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="pId" column="p_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RolePermissionMap">
        select
          id, role_id, p_id
        from electricity.t_role_permission
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RolePermissionMap">
        select
          id, role_id, p_id
        from electricity.t_role_permission
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RolePermissionMap">
        select
          id, role_id, p_id
        from electricity.t_role_permission
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="pId != null">
                and p_id = #{pId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertOne" keyProperty="id" useGeneratedKeys="true">
        insert into electricity.t_role_permission(role_id, p_id)
        values (#{roleId}, #{pId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update electricity.t_role_permission
        <set>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="pId != null">
                p_id = #{pId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from electricity.t_role_permission where id = #{id}
    </delete>

</mapper>