<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.merchant.MerchantPlaceMapper">
    <select id="list" resultType="com.xiliulou.electricity.entity.merchant.MerchantPlace">
        SELECT
        id,
        `name`
        FROM
        t_merchant_place
        WHERE
        del_flag = 0
        <if test="tenantId != null">
            and tenant_id = #{tenantId}
        </if>
        
        <if test="franchiseeId != null">
            and franchisee_id = #{franchiseeId}
        </if>
        
        <if test="idList != null and idList.size() > 0">
            AND id IN
            <foreach collection="idList" separator="," open="(" close=")" item="id">
                #{id}
            </foreach>
        </if>
    
    </select>
</mapper>
