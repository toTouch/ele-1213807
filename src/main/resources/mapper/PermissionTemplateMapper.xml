<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.PermissionTemplateMapper">

    <resultMap type="com.xiliulou.electricity.entity.PermissionTemplate" id="PermissionTemplateMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="pid" column="pid" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="selectPermissionTemplate">
       	select   id, pid, type        from t_permission_template
    </sql>

    <!--查询单个-->
    <select id="selectById" resultMap="PermissionTemplateMap">
        <include refid="selectPermissionTemplate"/>
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="selectByPage" resultMap="PermissionTemplateMap">
        <include refid="selectPermissionTemplate"/>
        from t_permission_template
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="selectByQuery" resultMap="PermissionTemplateMap">
        <include refid="selectPermissionTemplate"/>
        from t_permission_template
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertOne" keyProperty="id" useGeneratedKeys="true">
        insert into t_permission_template(pid, type)
        values (#{pid}, #{type})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_permission_template
        <set>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_permission_template where id = #{id}
    </delete>

</mapper>
