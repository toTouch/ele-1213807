<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.EleUserAuthMapper">
    
    <insert id="batchInsert">
        insert into t_ele_user_auth (`uid`, `entry_id`, `value`, `create_time`, `status`, `del_flag`, `update_time`, `tenant_id`)
        values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.uid}, #{item.entryId}, #{item.value}, #{item.createTime}, #{item.status},#{item.delFlag},#{item.updateTime}, #{item.tenantId})
        </foreach>
    </insert>

    <update id="updateByUid">
     update t_ele_user_auth
     set status = #{authStatus},update_time = #{updateTime}
     where uid = #{uid} and del_flag=0
    </update>

</mapper>
