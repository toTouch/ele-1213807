<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.RegionMapper">

    <resultMap type="com.xiliulou.electricity.entity.Region" id="RegionMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
        <result property="pid" column="pid" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="selectRegion">
       	select   id, code, pid, name        from t_region
    </sql>

    <!--查询单个-->
    <select id="selectById" resultMap="RegionMap">
        <include refid="selectRegion"/>
        where id = #{id}
    </select>

    <select id="selectByCode" resultMap="RegionMap">
        <include refid="selectRegion"/>
        where code = #{code}
    </select>

    <select id="queryRegionListByPid" resultMap="RegionMap">
        <include refid="selectRegion"/>
        where pid = #{pid}
    </select>


    <!--查询指定行数据-->
    <select id="selectByPage" resultMap="RegionMap">
        <include refid="selectRegion"/>
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="selectByQuery" resultMap="RegionMap">
        <include refid="selectRegion"/>
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="code != null and code != ''">
                and code = #{code}
            </if>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertOne" keyProperty="id" useGeneratedKeys="true">
        insert into t_region(code, pid, name)
        values (#{code}, #{pid}, #{name})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_region
        <set>
            <if test="code != null and code != ''">
                code = #{code},
            </if>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_region where id = #{id}
    </delete>

</mapper>
