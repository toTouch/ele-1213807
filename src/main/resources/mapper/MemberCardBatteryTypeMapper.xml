<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.MemberCardBatteryTypeMapper">

    <resultMap type="com.xiliulou.electricity.entity.MemberCardBatteryType" id="MemberCardBatteryTypeMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="batteryType" column="battery_type" jdbcType="VARCHAR"/>
        <result property="mid" column="mid" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MemberCardBatteryTypeMap">
        select
          id, battery_type, mid, create_time, update_time, tenant_id
        from t_member_card_battery_type
        where id = #{id}
    </select>

    <!--通过主键修改数据-->
    <update id="update">
        update t_member_card_battery_type
        <set>
            <if test="batteryType != null and batteryType != ''">
                battery_type = #{batteryType},
            </if>
            <if test="mid != null">
                mid = #{mid},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_member_card_battery_type where id = #{id}
    </delete>

</mapper>
