<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.MemberCardBatteryTypeMapper">

    <resultMap type="com.xiliulou.electricity.entity.MemberCardBatteryType" id="MemberCardBatteryTypeMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="batteryType" column="battery_type" jdbcType="VARCHAR"/>
        <result property="batteryV" column="battery_v" jdbcType="VARCHAR"/>
        <result property="mid" column="mid" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
    </resultMap>
    

    <select id="selectBatteryTypeByMid" resultType="String">
        select battery_type from t_member_card_battery_type
        where mid = #{mid}
    </select>
    
    <select id="selectListByMemberCardIds" resultType="com.xiliulou.electricity.entity.MemberCardBatteryType">
        select mid, battery_type from t_member_card_battery_type
        where mid in
        <foreach item="item" index="index" collection="memberCardIds" open="(" separator="," close=")">
            #{item}
        </foreach>
        and tenant_id = #{tenantId}
    </select>

    <select id="selectMemberCardIdsByBatteryType" resultType="java.lang.Long">
        select mid from t_member_card_battery_type
        where battery_type = #{batteryType}
        and tenant_id = #{tenantId}
    </select>

    <insert id="batchInsert" keyProperty="id" useGeneratedKeys="true">
        insert into t_member_card_battery_type(battery_type, battery_v,mid, create_time, update_time, tenant_id)
        values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.batteryType},#{item.batteryV},#{item.mid}, #{item.createTime}, #{item.updateTime}, #{item.tenantId})
        </foreach>
    </insert>


    <select id="selectListByMemberCardIdsAndModel"
            resultType="com.xiliulou.electricity.entity.MemberCardBatteryType">
        select mid from t_member_card_battery_type
        where mid in
        <foreach item="item" index="index" collection="memberCardIds" open="(" separator="," close=")">
            #{item}
        </foreach>
        and tenant_id = #{tenantId}
        <if test="model != null and model != ''">
            and battery_type like concat('%', #{model}, '%')
        </if>
    </select>

</mapper>
