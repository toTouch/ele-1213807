<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.UserInfoExtraMapper">
    
    <resultMap type="com.xiliulou.electricity.entity.UserInfoExtra" id="UserInfoExtraMap">
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="merchantId" column="merchant_id" jdbcType="INTEGER"/>
        <result property="channelEmployeeUid" column="channel_employee_uid" jdbcType="INTEGER"/>
        <result property="placeUid" column="place_uid" jdbcType="INTEGER"/>
        <result property="placeId" column="place_id" jdbcType="INTEGER"/>
        <result property="delFlag" column="del_flag" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="INTEGER"/>
        <result property="activitySource" column="activity_source" jdbcType="INTEGER"/>
        <result property="inviterUid" column="inviter_uid" jdbcType="INTEGER"/>
        <result property="latestActivitySource" column="latest_activity_source" jdbcType="INTEGER"/>
        <result property="eleLimit" column="ele_limit" jdbcType="INTEGER"/>
        <result property="minTimeOfMonth" column="min_time_of_month" jdbcType="BIGINT"/>
        <result property="packageFreezeCount" column="package_freeze_count" jdbcType="TINYINT"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
    </resultMap>
    
    <!--查询单个-->
    <select id="selectByUid" resultMap="UserInfoExtraMap">
        select
          uid, merchant_id, channel_employee_uid, place_uid, place_id, del_flag, tenant_id, create_time, update_time, activity_source, inviter_uid,
          latest_activity_source, ele_limit, min_time_of_month, package_freeze_count,remark
        from t_user_info_extra
        where uid = #{uid}
    </select>
    
    <!--新增所有列-->
    <!--新增SQL中不应增加 min_time_of_month、package_freeze_count 这两个字段，有大量场景未给这两个字段设置值，使用默认值即可-->
    <insert id="insert" keyProperty="uid" useGeneratedKeys="true">
        insert into t_user_info_extra(uid, merchant_id, channel_employee_uid, place_uid, place_id, del_flag, tenant_id, create_time, update_time,
                                      activity_source, inviter_uid, latest_activity_source, ele_limit)
        values (#{uid}, #{merchantId}, #{channelEmployeeUid}, #{placeUid}, #{placeId}, #{delFlag}, #{tenantId}, #{createTime}, #{updateTime},
                #{activitySource}, #{inviterUid}, #{latestActivitySource}, #{eleLimit})
    </insert>
    
    <!--通过主键修改数据-->
    <update id="updateByUid">
        update t_user_info_extra
        <set>
            <if test="merchantId != null">
                merchant_id = #{merchantId},
            </if>
            <if test="channelEmployeeUid != null">
                channel_employee_uid = #{channelEmployeeUid},
            </if>
            <if test="placeUid != null">
                place_uid = #{placeUid},
            </if>
            <if test="placeId != null">
                place_id = #{placeId},
            </if>
            <if test="delFlag != null">
                del_flag = #{delFlag},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="activitySource != null">
                activity_source = #{activitySource},
            </if>
            <if test="inviterUid != null">
                inviter_uid = #{inviterUid},
            </if>
            <if test="latestActivitySource != null">
                latest_activity_source = #{latestActivitySource},
            </if>
            <if test="eleLimit != null">
                ele_limit = #{eleLimit},
            </if>
            <if test="minTimeOfMonth != null">
                min_time_of_month = #{minTimeOfMonth},
            </if>
            <if test="packageFreezeCount != null">
                package_freeze_count = #{packageFreezeCount},
            </if>
            <if test="remark != null">
                remark = #{remark}
            </if>
            <if test="lostUserStatus != null">
                lost_user_status = #{lostUserStatus},
            </if>
            <if test="lostUserTime != null">
                lost_user_time = #{lostUserTime},
            </if>
            <if test="lostUserFirstRebateTime">
                lost_user_first_rebate_time = #{lostUserFirstRebateTime},
            </if>
        </set>
        where uid = #{uid}
    </update>
    
    <!--通过主键删除-->
    <delete id="deleteByUid">
        delete from t_user_info_extra where uid = #{uid}
    </delete>

</mapper>
