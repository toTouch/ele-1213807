<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.ApiOrderOperHistoryMapper">

    <resultMap type="com.xiliulou.electricity.entity.ApiOrderOperHistory" id="ApiOrderOperHistoryMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="orderId" column="order_id" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="msg" column="msg" jdbcType="VARCHAR"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ApiOrderOperHistoryMap">
        select
          id, order_id, create_time, type, msg, tenant_id
        from t_api_order_oper_history
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ApiOrderOperHistoryMap">
        select
          id, order_id, create_time, type, msg, tenant_id
        from t_api_order_oper_history
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ApiOrderOperHistoryMap">
        select
          id, order_id, create_time, type, msg, tenant_id
        from t_api_order_oper_history
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="orderId != null and orderId != ''">
                and order_id = #{orderId}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="msg != null and msg != ''">
                and msg = #{msg}
            </if>
            <if test="tenantId != null">
                and tenant_id = #{tenantId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertOne" keyProperty="id" useGeneratedKeys="true">
        insert into t_api_order_oper_history(order_id, create_time, type, msg, tenant_id)
        values (#{orderId}, #{createTime}, #{type}, #{msg}, #{tenantId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_api_order_oper_history
        <set>
            <if test="orderId != null and orderId != ''">
                order_id = #{orderId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="msg != null and msg != ''">
                msg = #{msg},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_api_order_oper_history where id = #{id}
    </delete>

</mapper>
