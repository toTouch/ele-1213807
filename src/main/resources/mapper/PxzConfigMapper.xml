<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.PxzConfigMapper">

    <resultMap type="com.xiliulou.electricity.entity.PxzConfig" id="PxzConfigMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
        <result property="aesKey" column="aes_key" jdbcType="VARCHAR"/>
        <result property="merchantCode" column="merchant_code" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryByTenantId" resultMap="PxzConfigMap">
        select
           tenant_id, aes_key, merchant_code, create_time, update_time
        from t_pxz_config
        where tenant_id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PxzConfigMap">
        select
          id, tenant_id, aes_key, merchant_code, create_time, update_time
        from t_pxz_config
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="PxzConfigMap">
        select
          id, tenant_id, aes_key, merchant_code, create_time, update_time
        from t_pxz_config
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="tenantId != null">
                and tenant_id = #{tenantId}
            </if>
            <if test="aesKey != null and aesKey != ''">
                and aes_key = #{aesKey}
            </if>
            <if test="merchantCode != null and merchantCode != ''">
                and merchant_code = #{merchantCode}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertOne" keyProperty="id" useGeneratedKeys="true">
        insert into t_pxz_config(tenant_id, aes_key, merchant_code, create_time, update_time)
        values (#{tenantId}, #{aesKey}, #{merchantCode}, #{createTime}, #{updateTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_pxz_config
        <set>
            <if test="aesKey != null and aesKey != ''">
                aes_key = #{aesKey},
            </if>
            <if test="merchantCode != null and merchantCode != ''">
                merchant_code = #{merchantCode},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where tenant_id = #{tenant_id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_pxz_config where id = #{id}
    </delete>

</mapper>
