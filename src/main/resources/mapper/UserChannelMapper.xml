<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.UserChannelMapper">
    
    <resultMap type="com.xiliulou.electricity.entity.UserChannel" id="UserChannelMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="operateUid" column="operate_uid" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
    </resultMap>
    
    <!--查询单个-->
    <select id="queryById" resultMap="UserChannelMap">
        select
          id, uid, operate_uid, create_time, update_time, tenant_id
        from t_user_channel
        where id = #{id}
    </select>
    
    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserChannelMap">
        select
          id, uid, operate_uid, create_time, update_time, tenant_id
        from t_user_channel
        limit #{offset}, #{limit}
    </select>
    
    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserChannelMap">
        select
        id, uid, operate_uid, create_time, update_time, tenant_id
        from t_user_channel
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="operateUid != null">
                and operate_uid = #{operateUid}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="tenantId != null">
                and tenant_id = #{tenantId}
            </if>
        </where>
    </select>
    
    <!--新增所有列-->
    <insert id="insertOne" keyProperty="id" useGeneratedKeys="true">
        insert into t_user_channel(uid, operate_uid, create_time, update_time, tenant_id)
        values (#{uid}, #{operateUid}, #{createTime}, #{updateTime}, #{tenantId})
    </insert>
    
    <!--通过主键修改数据-->
    <update id="update">
        update t_user_channel
        <set>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="operateUid != null">
                operate_uid = #{operateUid},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
        </set>
        where id = #{id}
    </update>
    
    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_user_channel where id = #{id}
    </delete>

</mapper>
