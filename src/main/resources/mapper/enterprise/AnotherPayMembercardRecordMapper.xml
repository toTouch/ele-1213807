<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.AnotherPayMembercardRecordMapper">
    
    <resultMap type="com.xiliulou.electricity.entity.enterprise.AnotherPayMembercardRecord" id="AnotherPayMembercardRecordMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="orderId" column="order_id" jdbcType="VARCHAR"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="beginTime" column="begin_time" jdbcType="INTEGER"/>
        <result property="endTime" column="end_time" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
    </resultMap>
    
    <!--查询单个-->
    <select id="queryById" resultMap="AnotherPayMembercardRecordMap">
        select
          id, order_id, uid, create_time, update_time, tenant_id
        from t_another_pay_membercard_record
        where id = #{id}
    </select>
    
    <select id="selectLatestByUid" resultMap="AnotherPayMembercardRecordMap">
        select
          id, order_id, begin_time, end_time, uid, create_time, update_time, tenant_id
        from t_another_pay_membercard_record
        where uid = #{uid} order by id desc limit 1
    </select>
    
    <select id="selectListByEnterpriseId" resultMap="AnotherPayMembercardRecordMap">
        select
          apmr.order_id,
          apmr.begin_time,
          apmr.end_time,
          apmr.uid
        from t_another_pay_membercard_record apmr left join t_enterprise_channel_user ecu on ecu.uid=apmr.uid
        where ecu.enterprise_id = #{enterpriseId}
    </select>
    
    <!--通过主键修改数据-->
    <update id="update">
        update t_another_pay_membercard_record
        <set>
            <if test="orderId != null and orderId != ''">
                order_id = #{orderId},
            </if>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="endTime != null">
                end_time = #{endTime},
            </if>
            <if test="beginTime != null">
                begin_time = #{beginTime},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
        </set>
        where id = #{id}
    </update>
    
    <update id="batchUpdateBeginAndEndTimeByIds">
        update t_another_pay_membercard_record set begin_time = begin_time + #{realDisableTime}, end_time = end_time + #{realDisableTime}, update_time = #{updateTime}
        <where>
            id in
            <foreach collection="idList" item="id" close=")" open="(" separator=",">
                #{id}
            </foreach>
        </where>
    </update>
    
    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_another_pay_membercard_record where id = #{id}
    </delete>
    
    <delete id="deleteByUid">
        delete from t_another_pay_membercard_record where uid = #{uid}
    </delete>
    
</mapper>
