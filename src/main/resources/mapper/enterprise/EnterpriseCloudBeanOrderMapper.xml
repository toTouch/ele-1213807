<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.enterprise.EnterpriseCloudBeanOrderMapper">

    <resultMap type="com.xiliulou.electricity.entity.enterprise.EnterpriseCloudBeanOrder" id="EnterpriseCloudBeanOrderMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="enterpriseId" column="enterprise_id" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="operateUid" column="operate_uid " jdbcType="INTEGER"/>
        <result property="payAmount" column="pay_amount" jdbcType="NUMERIC"/>
        <result property="orderId" column="order_id" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="payType" column="pay_type" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="beanAmount" column="bean_amount" jdbcType="NUMERIC"/>
        <result property="franchiseeId" column="franchisee_id" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="INTEGER"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="EnterpriseCloudBeanOrderMap">
        select
          id, enterprise_id, uid, operate_uid ,pay_amount, order_id, status, pay_type, type, bean_amount, franchisee_id, tenant_id, create_time, update_time, remark
        from t_enterprise_cloud_bean_order
        where id = #{id}
    </select>

    <select id="selectByPage" resultType="com.xiliulou.electricity.entity.enterprise.EnterpriseCloudBeanOrder">
        select
            o.id,
            o.enterprise_id,
            o.uid,
            o.operate_uid,
            o.pay_amount,
            o.order_id,
            o.STATUS,
            o.pay_type,
            o.type,
            o.bean_amount,
            o.franchisee_id,
            o.tenant_id,
            o.create_time,
            o.update_time,
            o.remark
        from t_enterprise_cloud_bean_order o
        LEFT JOIN t_enterprise_info e ON e.id = o.enterprise_id
        where o.status=1
          and e.del_flag = 0
        <if test="orderId != null and orderId != ''">
            and o.order_id = #{orderId}
        </if>
        <if test="enterpriseId != null">
            and o.enterprise_id = #{enterpriseId}
        </if>
        <if test="franchiseeId != null">
            and o.franchisee_id = #{franchiseeId}
        </if>
        <if test="uid != null">
            and o.uid = #{uid}
        </if>
        <if test="operateUid != null">
            and o.operate_uid = #{operateUid}
        </if>
        <if test="type != null">
            and o.type = #{type}
        </if>
        <if test="tenantId != null">
            and o.tenant_id = #{tenantId}
        </if>
        <if test="startTime != null">
            and o.create_time >= #{startTime}
        </if>
        <if test="endTime != null">
            and o.create_time &lt;= #{endTime}
        </if>
        <if test="franchiseeIds != null and franchiseeIds.size()>0">
            and o.franchisee_id in
            <foreach collection="franchiseeIds" item="id" index="index" open="(" close=")" separator=",">
                #{id}
            </foreach>
        </if>
        order by o.id desc
        limit #{offset}, #{size}
    </select>

    <select id="selectByPageCount" resultType="int">
        select
        count(1)
        from t_enterprise_cloud_bean_order o
        LEFT JOIN t_enterprise_info e ON e.id = o.enterprise_id
        where
            o.status=1
        and e.del_flag = 0
        <if test="orderId != null and orderId != ''">
            o.order_id = #{orderId}
        </if>
        <if test="enterpriseId != null">
            and o.enterprise_id = #{enterpriseId}
        </if>
        <if test="franchiseeId != null">
            and o.franchisee_id = #{franchiseeId}
        </if>
        <if test="uid != null">
            and o.uid = #{uid}
        </if>
        <if test="operateUid != null">
            and o.operate_uid = #{operateUid}
        </if>
        <if test="type != null">
            and o.type = #{type}
        </if>
        <if test="tenantId != null">
            and o.tenant_id = #{tenantId}
        </if>
        <if test="franchiseeIds != null and franchiseeIds.size()>0">
            and o.franchisee_id in
            <foreach collection="franchiseeIds" item="id" index="index" open="(" close=")" separator=",">
                #{id}
            </foreach>
        </if>
    </select>
    <select id="selectListByEnterpriseId"
            resultType="com.xiliulou.electricity.entity.enterprise.EnterpriseCloudBeanOrder">
        select
          id, enterprise_id, uid, operate_uid ,pay_amount, order_id, status, pay_type, type, bean_amount, franchisee_id, tenant_id, create_time, update_time, remark
        from t_enterprise_cloud_bean_order
        where  enterprise_id = #{enterpriseId}
    </select>
    
    <select id="selectListByOrderIdList"
            resultType="com.xiliulou.electricity.entity.enterprise.EnterpriseCloudBeanOrder">
        select order_id, operate_uid
        from t_enterprise_cloud_bean_order
        where order_id in
        <foreach collection="orderIdList" item="id" index="index" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>
    
    <!--通过主键修改数据-->
    <update id="update">
        update t_enterprise_cloud_bean_order
        <set>
            <if test="enterpriseId != null">
                enterprise_id = #{enterpriseId},
            </if>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="operateUid != null">
                operate_uid = #{operateUid},
            </if>
            <if test="payAmount != null">
                pay_amount = #{payAmount},
            </if>
            <if test="orderId != null and orderId != ''">
                order_id = #{orderId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="payType != null">
                pay_type = #{payType},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="beanAmount != null">
                bean_amount = #{beanAmount},
            </if>
            <if test="franchiseeId != null">
                franchisee_id = #{franchiseeId},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>
    
    <update id="updateOneById">
        update t_enterprise_cloud_bean_order
        <set>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="operateUid != null">
                operate_uid = #{operateUid},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id}
    </update>
    
    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_enterprise_cloud_bean_order where id = #{id}
    </delete>

</mapper>
