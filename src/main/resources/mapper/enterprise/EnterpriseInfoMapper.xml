<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.enterprise.EnterpriseInfoMapper">

    <resultMap type="com.xiliulou.electricity.entity.enterprise.EnterpriseInfo" id="EnterpriseInfoMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="businessId" column="business_id" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="franchiseeId" column="franchisee_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="renewalStatus" column="renewal_status" jdbcType="INTEGER"/>
        <result property="recoveryMode" column="recovery_mode" jdbcType="INTEGER"/>
        <result property="totalBeanAmount" column="total_bean_amount" jdbcType="NUMERIC"/>
        <result property="delFlag" column="del_flag" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="INTEGER"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="purchaseAuthority" column="purchase_authority" javaType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="EnterpriseInfoMap">
        select
          id, uid, business_id, name, phone, franchisee_id, status, recovery_mode, total_bean_amount, renewal_status, tenant_id, create_time, update_time, remark,purchase_authority
        from t_enterprise_info
        where id = #{id} and del_flag=0
    </select>

    <select id="selectByUid" resultMap="EnterpriseInfoMap">
        select
          id, uid, business_id, name, phone, franchisee_id, status, recovery_mode, total_bean_amount, renewal_status, tenant_id, create_time, update_time, remark,purchase_authority
        from t_enterprise_info
        where uid = #{uid} and del_flag=0
    </select>
    
    <resultMap type="com.xiliulou.electricity.vo.enterprise.EnterpriseInfoPackageVO" id="EnterpriseInfoPackageVO">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="businessId" column="business_id" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="franchiseeId" column="franchisee_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="recoveryMode" column="recovery_mode" jdbcType="INTEGER"/>
        <result property="totalBeanAmount" column="total_bean_amount" jdbcType="NUMERIC"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="INTEGER"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="purchaseAuthority" column="purchase_authority" javaType="INTEGER"/>
        <collection property="enterprisePackage" javaType="java.util.List" ofType="com.xiliulou.electricity.entity.enterprise.EnterprisePackage">
            <id property="id" column="mcbt_id" jdbcType="INTEGER"/>
            <result property="packageId" column="package_id" jdbcType="INTEGER"/>
        </collection>
    </resultMap>
    
    <select id="selectByPage" resultMap="EnterpriseInfoPackageVO">
        select * from (
        select
        tei.id,
        tei.uid,
        tei.business_id,
        tei.name,
        tei.phone,
        tei.franchisee_id,
        tei.status,
        tei.recovery_mode,
        tei.total_bean_amount,
        tei.tenant_id,
        tei.create_time,
        tei.update_time,
        tei.remark,
        tei.purchase_authority
        from t_enterprise_info tei left join t_enterprise_package tep on tei.id=tep.enterprise_id
        <where>
            tei.del_flag=0
            <if test="name != null and name != ''">
                and tei.name like concat('%',#{name,jdbcType=VARCHAR},'%')
            </if>
            <if test="franchiseeId != null">
                and tei.franchisee_id = #{franchiseeId}
            </if>
            <if test="franchiseeIds != null and franchiseeIds.size() > 0">
                and tei.franchisee_id in
                <foreach collection="franchiseeIds" item="franchiseeId" index="index" open="(" separator="," close=")">
                    #{franchiseeId}
                </foreach>
            </if>
            <if test="phone != null and phone != ''">
                and tei.phone = #{phone}
            </if>
            <if test="packageId != null">
                and tep.package_id = #{packageId}
            </if>
            <if test="status != null">
                and tei.status = #{status}
            </if>
            <if test="uid != null">
                and tei.uid = #{uid}
            </if>
            <if test="tenantId != null">
                and tei.tenant_id = #{tenantId}
            </if>
        </where>
        group by tei.id
        order by tei.id desc
        ) a
        limit #{offset}, #{size}
    </select>

    <select id="selectByPageCount" resultType="int">
        select
        count(1) from (
        select tei.id from t_enterprise_info tei left join t_enterprise_package tep on tei.id=tep.enterprise_id
        <where>
        tei.del_flag=0
        <if test="name != null and name != ''">
            and tei.name like concat('%',#{name,jdbcType=VARCHAR},'%')
        </if>
        <if test="franchiseeId != null">
            and tei.franchisee_id = #{franchiseeId}
        </if>
        <if test="franchiseeIds != null and franchiseeIds.size() > 0">
            and tei.franchisee_id in
            <foreach collection="franchiseeIds" item="franchiseeId" index="index" open="(" separator="," close=")">
                #{franchiseeId}
            </foreach>
        </if>
        <if test="phone != null and phone != ''">
            and tei.phone = #{phone}
        </if>
        <if test="packageId != null">
            and tep.package_id = #{packageId}
        </if>
        <if test="status != null">
            and tei.status = #{status}
        </if>
        <if test="uid != null">
            and tei.uid = #{uid}
        </if>
        <if test="tenantId != null">
            and tei.tenant_id = #{tenantId}
        </if>
        </where>
        group by tei.id
        ) a
    </select>
    
    <select id="selectListByIdList" resultType="com.xiliulou.electricity.entity.enterprise.EnterpriseInfo">
        SELECT
        id,
        total_bean_amount
        FROM
        t_enterprise_info
        where
        del_flag = 0
        and id in
        <foreach collection="idList" separator="," open="(" close=")" item="id">
            #{id}
        </foreach>
    </select>
    
    <select id="selectList" resultType="com.xiliulou.electricity.entity.enterprise.EnterpriseInfo">
        select  id, uid, business_id, name, phone, franchisee_id, status, recovery_mode, total_bean_amount, renewal_status, tenant_id, create_time, update_time, remark,purchase_authority
        from  t_enterprise_info
        where
            del_flag = 0 and status = 0
            <if test="tenantId != null">
                and tenant_id = #{tenantId}
            </if>
    </select>
    
    <!--通过主键修改数据-->
    <update id="update">
        update t_enterprise_info
        <set>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="franchiseeId != null">
                franchisee_id = #{franchiseeId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="recoveryMode != null">
                recovery_mode = #{recoveryMode},
            </if>
            <if test="renewalStatus != null">
                renewal_status = #{renewalStatus},
            </if>
            <if test="totalBeanAmount != null">
                total_bean_amount = #{totalBeanAmount},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
            <if test="delFlag != null">
                del_flag = #{delFlag},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
            <if test="purchaseAuthority != null">
                purchase_authority = #{purchaseAuthority},
            </if>
        </set>
        where id = #{id}
    </update>
    
    <update id="addCloudBean">
        update t_enterprise_info set total_bean_amount = total_bean_amount+ #{totalCloudBean}
        where id = #{id}
    </update>
    
    <update id="subtractCloudBean">
        update t_enterprise_info set total_bean_amount = total_bean_amount- #{subtractCloudBean}, update_time = #{updateTime}
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_enterprise_info where id = #{id}
    </delete>
    
    <update id="updatePhoneByUid">
        update t_enterprise_info set phone=#{newPhone} where uid=#{uid} and tenant_id = #{tenantId}
    </update>
</mapper>
