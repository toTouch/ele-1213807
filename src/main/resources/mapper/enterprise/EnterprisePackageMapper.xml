<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.enterprise.EnterprisePackageMapper">

    <resultMap type="com.xiliulou.electricity.entity.enterprise.EnterprisePackage" id="EnterprisePackageMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="enterpriseId" column="enterprise_id" jdbcType="INTEGER"/>
        <result property="packageId" column="package_id" jdbcType="INTEGER"/>
        <result property="packageType" column="package_type" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="EnterprisePackageMap">
        select
          id, enterprise_id, package_id, package_type, tenant_id, create_time, update_time
        from t_enterprise_package
        where id = #{id}
    </select>

    <select id="selectByEnterpriseId" resultType="Long">
        select  package_id
        from t_enterprise_package
        where enterprise_id = #{id}
    </select>
    
    <select id="selectByPackageId" resultType="Integer">
        select 1
        from t_enterprise_package
        where package_id = #{packageId} order by id limit 1
    </select>
    
    <select id="listByIdList" resultType="com.xiliulou.electricity.entity.enterprise.EnterprisePackage">
        select  package_id
        from t_enterprise_package
        where package_id = #{packageId}
    </select>
    
    <select id="selectListByEnterpriseId"
        resultType="com.xiliulou.electricity.bo.merchant.MerchantEnterprisePackageBO">
        SELECT
            e.package_id,
            b.`name`
        FROM
            t_enterprise_package e
                left join t_battery_member_card b on b.id = e.package_id
        WHERE
            enterprise_id = #{id}
             and status = 0
    </select>

    <!--通过主键修改数据-->
    <update id="update">
        update t_enterprise_package
        <set>
            <if test="enterpriseId != null">
                enterprise_id = #{enterpriseId},
            </if>
            <if test="packageId != null">
                package_id = #{packageId},
            </if>
            <if test="packageType != null">
                package_type = #{packageType},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_enterprise_package where id = #{id}
    </delete>
    
    <delete id="deleteByEnterpriseId">
        delete from t_enterprise_package where enterprise_id = #{id}
    </delete>

    <insert id="batchInsert">
        insert into t_enterprise_package(enterprise_id, package_id, package_type, tenant_id, create_time, update_time)
        values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.enterpriseId}, #{item.packageId}, #{item.packageType}, #{item.tenantId}, #{item.createTime},
            #{item.updateTime})
        </foreach>
    </insert>

</mapper>
