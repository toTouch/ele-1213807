<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.profitsharing.ProfitSharingStatisticsMapper">
    
    <resultMap type="com.xiliulou.electricity.entity.profitsharing.ProfitSharingStatistics" id="ProfitSharingStatisticsMap">
        <result property="id" column="id" jdbcType="BIGINT"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
        <result property="franchiseeId" column="franchisee_id" jdbcType="BIGINT"/>
        <result property="statisticsType" column="statistics_type" jdbcType="INTEGER"/>
        <result property="statisticsTime" column="statistics_time" jdbcType="VARCHAR"/>
        <result property="totalAmount" column="total_amount" jdbcType="VARCHAR"/>
        <result property="delFlag" column="del_flag" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="BIGINT"/>
        <result property="updateTime" column="update_time" jdbcType="BIGINT"/>
    </resultMap>
    
    <sql id="base_column">
        id
        , tenant_id, franchisee_id, statistics_type, statistics_time, total_amount, del_flag, create_time, update_time    </sql>
    
    <sql id="table_name">
        t_profit_sharing_statistics
    </sql>
    
    <select id="selectByTenantIdAndFranchiseeId"
        resultMap="ProfitSharingStatisticsMap">
        select
        <include refid="base_column"/>
        from
        <include refid="table_name"/>
        where del_flag=0 and tenant_id=#{tenantId} and franchisee_id=#{franchiseeId} and statistics_time=#{statisticsTime}
    </select>
    
    
    <update id="addTotalAmount">
        update
        <include refid="table_name"/>
        set total_amount=total_amount+#{amount} , update_time=#{updateTime} where id = #{id}
    </update>
    
    <update id="subtractAmountById">
        update
        <include refid="table_name"/>
        set total_amount = total_amount - #{amount} , update_time=#{updateTime} where id = #{id}
    </update>
    
    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into<include refid="table_name">(tenant_id, franchisee_id, statistics_type, statistics_time, total_amount, create_time, update_time)
        values (#{tenantId}, #{franchiseeId}, #{statisticsType}, #{statisticsTime}, #{totalAmount}, #{createTime}, #{updateTime})
    </insert>


</mapper>

