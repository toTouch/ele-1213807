<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.profitsharing.ProfitSharingTradeMixedOrderMapper">
    
    <resultMap type="com.xiliulou.electricity.entity.profitsharing.ProfitSharingTradeMixedOrder" id="ProfitSharingTradeMixedOrderMap">
        <result property="id" column="id" jdbcType="BIGINT"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
        <result property="franchiseeId" column="franchisee_id" jdbcType="BIGINT"/>
        <result property="thirdMerchantId" column="third_merchant_id" jdbcType="VARCHAR"/>
        <result property="thirdOrderNo" column="third_order_no" jdbcType="VARCHAR"/>
        <result property="amount" column="amount" jdbcType="DECIMAL"/>
        <result property="channel" column="channel" jdbcType="VARCHAR"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
        <result property="delFlag" column="del_flag" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="BIGINT"/>
        <result property="updateTime" column="update_time" jdbcType="BIGINT"/>
    </resultMap>
    
    <sql id="base_column">
        id
        , tenant_id, franchisee_id, third_merchant_id, third_order_no, amount, channel,del_flag, create_time, update_time    </sql>
    
    <sql id="table_name">
        t_profit_sharing_trade_mixed_order
    </sql>
    
    
    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into<include refid="table_name"/>(tenant_id, franchisee_id, third_merchant_id, third_order_no, state, amount, channel,create_time, update_time, uid)
        values (#{tenantId}, #{franchiseeId}, #{thirdMerchantId}, #{thirdOrderNo},#{state}, #{amount},#{channel}, #{createTime}, #{updateTime}, #{uid})
    </insert>
    
    <update id="updateStatusById">
        update
        <include refid="table_name"/>
        set state = #{state},update_time=#{updateTime}
        where id =#{id}
    </update>
    
    <select id="selectListByParam"
        resultMap="ProfitSharingTradeMixedOrderMap">
        select
        <include refid="base_column"/>
        from
        <include refid="table_name"/>
        where del_flag = 0 and state = #{state} and id > #{startId}
        and channel=#{channel}
        order by id asc
        limit #{size}
    </select>
    
    <select id="selectByThirdOrderNo"
            resultType="com.xiliulou.electricity.entity.profitsharing.ProfitSharingTradeMixedOrder">
        select <include refid="base_column"/> from t_profit_sharing_trade_mixed_order where thrid_order_no = #{thirdOrderNo} limit 1
    </select>
    
    <select id="selectListThirdOrderNoByTenantId" resultType="java.lang.String">
        select third_order_no
        from t_profit_sharing_trade_mixed_order
        where tenant_id = #{tenantId}
          and create_time > #{startTime}
          and id > #{startId}
          order by id asc
          limit #{offset}, #{size}
    </select>


</mapper>

