<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiliulou.electricity.mapper.UserBatteryMapper">
    
    <resultMap type="com.xiliulou.electricity.entity.UserBattery" id="UserBatteryMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="initBatterySn" column="init_battery_sn" jdbcType="VARCHAR"/>
        <result property="nowBatterySn" column="now_battery_sn" jdbcType="VARCHAR"/>
        <result property="batteryType" column="battery_type" jdbcType="VARCHAR"/>
        <result property="delFlag" column="del_flag" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="INTEGER"/>
    </resultMap>
    
    <!-- 基础字段 -->
    <sql id="selectUserBattery">
       	select   id, uid, init_battery_sn, now_battery_sn, battery_type, del_flag, create_time, update_time        from t_user_battery
    </sql>
    
    <!--查询单个-->
    <select id="selectByUid" resultMap="UserBatteryMap">
        <include refid="selectUserBattery"/>
        where uid = #{uid}
    </select>
    
    <!--通过实体作为筛选条件查询-->
    <select id="selectByQuery" resultMap="UserBatteryMap">
        <include refid="selectUserBattery"/>
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="initBatterySn != null and initBatterySn != ''">
                and init_battery_sn = #{initBatterySn}
            </if>
            <if test="nowBatterySn != null and nowBatterySn != ''">
                and now_battery_sn = #{nowBatterySn}
            </if>
            <if test="batteryType != null and batteryType != ''">
                and battery_type = #{batteryType}
            </if>
            <if test="delFlag != null">
                and del_flag = #{delFlag}
            </if>
            <if test="tenantId != null">
                and tenant_id = #{tenantId}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
    </select>
    
    <!--新增所有列-->
    <insert id="insertOne" keyProperty="id" useGeneratedKeys="true">
        insert into t_user_battery(uid, init_battery_sn, now_battery_sn, battery_type, del_flag, create_time, update_time)
        values (#{uid}, #{initBatterySn}, #{nowBatterySn}, #{batteryType}, #{delFlag}, #{createTime}, #{updateTime})
    </insert>

    <insert id="insertOrUpdate" keyProperty="id" useGeneratedKeys="true">
        insert into t_user_battery(uid, init_battery_sn, now_battery_sn, battery_type, del_flag, create_time, update_time)
        values (#{uid}, #{initBatterySn}, #{nowBatterySn}, #{batteryType}, #{delFlag}, #{createTime}, #{updateTime})
        on duplicate key
        update #{initBatterySn}, #{nowBatterySn}, #{batteryType}, #{delFlag} #{updateTime}
    </insert>
    
    <!--通过主键修改数据-->
    <update id="updateByUid">
        update t_user_battery
        <set>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="initBatterySn != null and initBatterySn != ''">
                init_battery_sn = #{initBatterySn},
            </if>
            <if test="nowBatterySn != null and nowBatterySn != ''">
                now_battery_sn = #{nowBatterySn},
            </if>
            <if test="batteryType != null and batteryType != ''">
                battery_type = #{batteryType},
            </if>
            <if test="delFlag != null">
                del_flag = #{delFlag},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where uid = #{uid}
    </update>
    
    <!--通过主键删除-->
    <delete id="deleteByUid">
        delete from t_user_battery where uid = #{uid}
    </delete>

</mapper>
